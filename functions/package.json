    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.87.6",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "private": true
}

