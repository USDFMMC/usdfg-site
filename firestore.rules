rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Challenges - anyone can read, participants can update
    match /challenges/{challengeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null;
      // Allow updates from participants (for results, cancel requests, etc.)
      allow update: if true;
    }
    
    // Challenge Chats - temporary chat during result submission
    match /challenge_chats/{chatId} {
      allow read, write: if true;
      // TODO: Add more restrictive rules based on challenge participants
    }
    
    // Voice Signals - WebRTC signaling for voice chat
    match /voice_signals/{signalId} {
      allow read, write: if true;
      // TODO: Add more restrictive rules based on challenge participants
    }
    
    // User profiles (if you use them)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

