rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Challenges - anyone can read/write (using Solana wallet auth, not Firebase Auth)
    match /challenges/{challengeId} {
      allow read: if true;
      allow create: if true; // Allow anyone to create (Solana wallet verification happens on-chain)
      allow delete: if true; // Allow deletion (can add wallet-based rules later)
      // Allow updates from participants OR admins resolving disputes
      allow update: if 
        // Players can update their own results (proof images)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['results', 'updatedAt'])) ||
        // Admins can resolve disputed challenges
        (resource.data.status == 'disputed' && 
         request.auth != null && 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
         request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'winner', 'resolvedBy', 'resolvedAt']) &&
         request.resource.data.status == 'completed') ||
        // Regular participant updates (existing behavior)
        true;
    }
    
    // Challenge Chats - temporary chat during result submission
    match /challenge_chats/{chatId} {
      allow read, write: if true;
      // TODO: Add more restrictive rules based on challenge participants
    }
    
    // Voice Signals - WebRTC signaling for voice chat
    match /voice_signals/{signalId} {
      allow read, write: if true;
      // TODO: Add more restrictive rules based on challenge participants
    }
    
    // Player Stats - track wins/losses/earnings
    match /player_stats/{wallet} {
      allow read: if true; // Anyone can view player stats
      allow write: if true; // Allow system to update stats (Solana wallet verification on-chain)
    }
    
    // Challenge Archive - for expired challenges
    match /challenges_archive/{challengeId} {
      allow read: if true;
      allow write: if true; // Allow archiving expired challenges
    }
    
    // User profiles (if you use them)
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Lobby Lock Notifications - alerts when players lock each other in
    match /lock_notifications/{notificationId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Challenge Notifications - alerts when someone sends a challenge to a specific player
    match /challenge_notifications/{notificationId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Friendly Matches - player-initiated matches without entry fees
    match /friendly_matches/{matchId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Free USDFG Claim Events - anyone can read, system can write
    match /free_claims/{claimId} {
      allow read: if true; // Anyone can view active claim events
      allow create: if true; // Allow creation (admin/system will create these)
      allow update: if true; // Allow updates when users claim (system updates)
      allow delete: if true; // Allow deletion for cleanup/testing
    }
    
    // Founder Challenge Rewards - tracks actual USDFG transferred to players
    match /founder_rewards/{rewardId} {
      allow read: if true; // Anyone can view rewards
      allow create: if true; // Allow creation (admin/system records actual transfers)
      allow update: if false; // Don't allow updates (immutable record)
      allow delete: if true; // Allow deletion for cleanup/testing
    }
    
    // Stats collection - cached totals for efficient reads
    match /stats/{statId} {
      allow read: if true; // Anyone can view stats
      allow create: if true; // Allow creation (system/admin only)
      allow update: if true; // Allow updates (system/admin only)
      allow delete: if true; // Allow deletion for cleanup/testing
    }
    
    // Trust Reviews - reviews submitted by players after matches
    match /trust_reviews/{reviewId} {
      allow get, list: if true; // Anyone can view reviews (explicitly allow get and list queries)
      allow create: if true; // Allow creation (players submit reviews)
      allow update: if false; // Don't allow updates (immutable)
      allow delete: if true; // Allow deletion for cleanup/testing
    }
    
    // Teams - Elite Esports Teams
    match /teams/{teamId} {
      allow get, list: if true; // Anyone can view teams (explicitly allow get and list queries)
      allow create: if true; // Allow creation (team key holder creates team)
      allow update: if true; // Allow updates (team key holder can update, members can join/leave)
      allow delete: if true; // Allow deletion for cleanup/testing
    }
    
    // Challenge Lobbies - real-time lobby state and spectator tracking
    match /challenge_lobbies/{challengeId} {
      // Spectators subcollection - cost-optimized spectator tracking
      // Only allows users to manage their own spectator document
      match /spectators/{wallet} {
        allow read: if true; // Anyone can see who's watching (for display purposes)
        allow create: if true; // Allow users to add themselves as spectators
        allow update: if true; // Allow users to update their own lastSeen (wallet matches doc ID)
        allow delete: if true; // Allow users to remove themselves when they leave
      }
      
      // Voice Controls subcollection - creator mute controls for participants/spectators
      match /voice_controls/{wallet} {
        allow read: if true; // Anyone can read mute status
        allow create: if true; // Allow creators to mute participants/spectators
        allow update: if true; // Allow updates to mute status
        allow delete: if true; // Allow creators to unmute (by deleting the doc)
      }
      
      // Stats subcollection - spectator count tracking
      match /stats/{statId} {
        allow read: if true; // Anyone can read stats
        allow create: if true; // Allow creation for spectator count
        allow update: if true; // Allow updates to spectator count
        allow delete: if true; // Allow deletion for cleanup
      }
    }
    
    // Admins Collection - only admins can read, no client writes
    match /admins/{adminId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow write: if false; // Only server-side or manual Firebase Console
    }
    
    // Admin Audit Log - only admins can read, only admins can create
    match /admin_audit_log/{logId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow update: if false; // Immutable
      allow delete: if false; // Immutable
    }
  }
}

